<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_magento_backend_form" model="ir.ui.view">
            <field name="name">magento.backend.form</field>
            <field name="model">magento.backend</field>
            <field name="arch" type="xml">
                <form string="Magento Backend" version="7.0">
                    <header>
                      <button name="synchronize_metadata"
                        class="oe_highlight"
                        string="Synchronize Metadata"/>
                    </header>
                    <sheet>
                        <h1>
                            <field name="name" class="oe_inline"/>
                        </h1>
                        <group col="4">
                            <field name="location" colspan="4"/>
                            <field name="username"/>
                            <field name="password"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record id="view_magento_backend_tree" model="ir.ui.view">
            <field name="name">magento.backend.tree</field>
            <field name="model">magento.backend</field>
            <field name="arch" type="xml">
                <tree string="Magento Backend" version="7.0">
                    <field name="name"/>
                    <field name="location"/>
                </tree>
            </field>
        </record>

        <record id="action_magento_backend" model="ir.actions.act_window">
            <field name="name">Magento Backends</field>
            <field name="res_model">magento.backend</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_magento_backend_tree"/>
        </record>


        <record id="view_magento_website_form" model="ir.ui.view">
            <field name="name">magento.website.form</field>
            <field name="model">magento.website</field>
            <field name="arch" type="xml">
                <form string="Magento Website" version="7.0">
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <field name="backend_id"/>
                        <field name="code"/>
                        <field name="sort_order"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_magento_website_tree" model="ir.ui.view">
            <field name="name">magento.website.tree</field>
            <field name="model">magento.website</field>
            <field name="arch" type="xml">
                <tree string="Magento Website" version="7.0">
                    <field name="name"/>
                    <field name="backend_id"/>
                    <field name="code"/>
                    <field name="sort_order"/>
                </tree>
            </field>
        </record>

        <record id="action_magento_website" model="ir.actions.act_window">
            <field name="name">Magento Websites</field>
            <field name="res_model">magento.website</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_magento_website_tree"/>
        </record>


        <record id="view_magento_store_form" model="ir.ui.view">
            <field name="name">magento.store.form</field>
            <field name="model">magento.store</field>
            <field name="arch" type="xml">
                <form string="Magento Store" version="7.0">
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <field name="website_id"/>
                        <field name="shop_id"/>
                    </group>
                    <group>
                        <field name="default_category_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_magento_store_tree" model="ir.ui.view">
            <field name="name">magento.store.tree</field>
            <field name="model">magento.store</field>
            <field name="arch" type="xml">
                <tree string="Magento Store" version="7.0">
                    <field name="name"/>
                    <field name="website_id"/>
                    <field name="shop_id"/>
                </tree>
            </field>
        </record>

        <record id="action_magento_store" model="ir.actions.act_window">
            <field name="name">Magento Stores</field>
            <field name="res_model">magento.store</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_magento_store_tree"/>
        </record>


        <record id="view_magento_storeview_form" model="ir.ui.view">
            <field name="name">magento.storeview.form</field>
            <field name="model">magento.storeview</field>
            <field name="arch" type="xml">
                <form string="Magento Storeview" version="7.0">
                    <h1>
                        <field name="name" class="oe_inline"/>
                    </h1>
                    <group>
                        <field name="code"/>
                        <field name="store_id"/>
                    </group>
                    <group>
                        <field name="sort_order"/>
                        <field name="enabled"/>
                    </group>
                    <group>
                        <field name="lang_id"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_magento_storeview_tree" model="ir.ui.view">
            <field name="name">magento.storeview.tree</field>
            <field name="model">magento.storeview</field>
            <field name="arch" type="xml">
                <tree string="Magento Storeview" version="7.0">
                    <field name="name"/>
                    <field name="code"/>
                    <field name="enabled"/>
                    <field name="sort_order"/>
                    <field name="store_id"/>
                    <field name="lang_id"/>
                </tree>
            </field>
        </record>

        <record id="action_magento_storeview" model="ir.actions.act_window">
            <field name="name">Magento Storeviews</field>
            <field name="res_model">magento.storeview</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="view_magento_storeview_tree"/>
        </record>

        <!--Magento Instances Tree/Form view  -->

        <record model="ir.ui.view" id="magerp_instances_form">
            <field name="name">External Referentials</field>
            <field name="model">external.referential</field>
            <field name="inherit_id" ref="connector.external_referential_view_form" />
            <field name="arch" type="xml">
                <page name="old_synchros" position="inside">
                    <group name="magento" col="4" colspan="4" attrs="{'invisible': [['type_name', '!=', 'Magento']]}">
                        <separator string="Optional - Initial import only" colspan="4" />
                        <button name="import_customer_groups" string="1 - Import Customer Groups (Partner Categories)" colspan="2" type="object" />
                        <group colspan="2" col="12">
                            <button name="sync_attribs" string="5 - Import Product Attributes" colspan="10" type="object" />
                            <field name="import_all_attributs"/>
                        </group>
                        <button name="import_product_categories" string="2 - Import Product Categories" colspan="2" type="object" />
                        <group colspan="2" col="14">
                            <group colspan="8">
                                <button name="sync_products" string="6 - Import Products" type="object" attrs="{'invisible':[('import_image_with_product','=',True)]}" />
                                <button name="sync_products" string="6 - Import Products And Images" type="object" attrs="{'invisible':[('import_image_with_product','=',False)]}" />
                            </group>
                            <group>
                                <field name="import_image_with_product"/>
                                <field name="import_links_with_product"/>
                                <field name="last_imported_product_id" string=""/>
                            </group>
                        </group>
                        <button name="sync_attrib_sets" string="3 - Import Product Attribute Sets" colspan="2" type="object" />
                        <button name="sync_images" string="7 - Import Images" colspan="2" type="object" attrs="{'invisible':[('import_image_with_product','=',True)]}"/>
                        <button name="sync_attrib_groups" string="4 - Import Attribute Groups" colspan="2" type="object" />
                        <button name="sync_product_links" string="8 - Import Product Links" colspan="2" type="object" />
                        <separator string="Default values" colspan="4" />
                        <field name="default_pro_cat" attrs="{'required': [['type_name', '=', 'Magento']]}"/>
                        <field name="default_lang_id" attrs="{'required': [['type_name', '=', 'Magento']]}"/>
                        <separator string="Partner" colspan="4"/>
                        <group colspan="2" col="12">
                            <button name="sync_partner" string="Import All Partners" colspan="10" type="object" />
                            <field name="last_imported_partner_id" string=""/>
                        </group>
                        <button name="sync_newsletter" string="Import Newsletter Subscribers" colspan="2" type="object" />
                        <button name="sync_newsletter_unsubscriber" string="Export Newsletter UnSubscribers" colspan="2" type="object" />
                    </group>
                </page>
                <page name="configuration" position="after">
                    <page string="Websites" attrs="{'invisible': [['type_name', '!=', 'Magento']]}">
                        <field name="shop_group_ids" nolabel="1" />
                    </page>
                    <page string="Product Attributes / Sets" attrs="{'invisible': [['type_name', '!=', 'Magento']]}">
                        <field name="attribute_sets" nolabel="1" colspan="4"/>
                    </page>
                </page>
                <page name="configuration" position="inside">
                  <group>
                    <field name="active" select="2"/>
                  </group>
                </page>
            </field>
        </record>
        <record id="act_magerp_instances_form" model="ir.actions.act_window">
            <field name="name">Magento Instances</field>
            <field name="res_model">external.referential</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="connector.external_referential_view_tree" />
            <field name="domain" eval="False"></field>
        </record>

        <!--Magento Websites Tree/Form view  -->
        <record model="ir.ui.view" id="magerp_websites_form">
            <field name="name">external.shop.group.form</field>
            <field name="model">external.shop.group</field>
            <field name="arch" type="xml">
                <form string="Magento websites">
                    <group col="4" colspan="4">
                        <field name="name" readonly="1" />
                        <field name="code" readonly="1" />
                        <field name="is_default" readonly="1" />
                        <field name="sort_order" readonly="1" />
                        <field name="default_shop_id" readonly="1" />
                        <field name="referential_id" readonly="1" />
                    </group>
                    <group col="4" colspan="4">
                        <field name="shop_ids" readonly="1"/>
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="magerp_websites_tree">
            <field name="name">external.shop.group.tree</field>
            <field name="model">external.shop.group</field>
            <field name="arch" type="xml">
                <tree string="Magento websites">
                    <field name="name" readonly="1" select="1" />
                    <field name="code" readonly="1" select="1" />
                    <field name="is_default" readonly="1" select="2" />
                    <field name="sort_order" readonly="1" select="2" />
                    <field name="default_shop_id" readonly="1" select="2" />
                    <field name="shop_ids" readonly="1" />
                </tree>
            </field>
        </record>
        <record id="act_magerp_websites_form" model="ir.actions.act_window">
            <field name="name">Magento websites</field>
            <field name="res_model">external.shop.group</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="magerp_websites_tree" />
        </record>

        <!--Magento storeviews Tree/Form view  -->
        <record model="ir.ui.view" id="magerp_storeviews_form">
            <field name="name">magerp.storeviews.form</field>
            <field name="model">magerp.storeviews</field>
            <field name="arch" type="xml">
                <form string="Magento storeviews">
                    <group col="4" colspan="4">
                        <field name="name" readonly="1" />
                        <field name="code" readonly="1" />
                        <field name="shop_id" readonly="1" />
                        <field name="website_id" readonly="1" />
                        <field name="is_active" readonly="1" />
                        <field name="sort_order" readonly="1" />
                        <field name="lang_id" />
                    </group>
                </form>
            </field>
        </record>
        <record model="ir.ui.view" id="magerp_storeviews_tree">
            <field name="name">magerp.storeviews.tree</field>
            <field name="model">magerp.storeviews</field>
            <field name="arch" type="xml">
                <tree string="Magento storeviews">
                    <field name="name" readonly="1" select="1" />
                    <field name="code" readonly="1" select="1" />
                    <field name="shop_id" readonly="1" select="1" />
                    <field name="is_active" readonly="1" select="2" />
                    <field name="sort_order" readonly="1" select="2" />
                    <field name="lang_id" />
                </tree>
            </field>
        </record>
        <record id="act_magerp_storeviews_form" model="ir.actions.act_window">
            <field name="name">Magento storeviews</field>
            <field name="res_model">magerp.storeviews</field>
            <field name="type">ir.actions.act_window</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="magerp_storeviews_tree" />
        </record>

    </data>
</openerp>

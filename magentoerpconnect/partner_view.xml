<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="view_partner_form" model="ir.ui.view">
            <field name="name">res.partner.form</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="connector.view_partner_connector_form" />
            <field name="arch" type="xml">
                <field name="date" position="after">
                    <field name="birthday"/>
                </field>
                <page name="connector" position="attributes">
                    <attribute name="invisible">0</attribute>
                </page>
                <page name="connector" position="inside">
                    <group string="Magento Bindings">
                        <field name="magento_bind_ids" nolabel="1"/>
                    </group>
                </page>
            </field>
        </record>

        <record id="view_magento_res_partner_form" model="ir.ui.view">
            <field name="name">magento.res.partner.form</field>
            <field name="model">magento.res.partner</field>
            <field name="arch" type="xml">
                <form string="Magento Partner" version="7.0">
                    <group>
                        <field name="website_id"/>
                        <field name="backend_id"/>
                        <field name="magento_id"/>
                    </group>
                    <group>
                        <field name="created_at"/>
                        <field name="updated_at"/>
                    </group>
                    <group>
                        <field name="group_id"/>
                        <field name="email"/>
                        <field name="taxvat"/>
                        <field name="newsletter"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="view_magento_res_partner_tree" model="ir.ui.view">
            <field name="name">magento.res.partner.tree</field>
            <field name="model">magento.res.partner</field>
            <field name="arch" type="xml">
                <tree string="Magento Partner" version="7.0">
                    <field name="backend_id"/>
                    <field name="website_id"/>
                </tree>
            </field>
        </record>

        <!-- below: to review -->
        <record id="view_partner_form_magerp" model="ir.ui.view">
            <field name="name">res.partner.form_magerp</field>
            <field name="model">res.partner</field>
            <field name="inherit_id" ref="base.view_partner_form" />
            <field name="arch" type="xml">
                <xpath expr="/form/sheet/notebook" position="inside">
                    <page string="Magento Information">
                        <group>
                            <field name="magento_exported" invisible="True"/>
                            <field name="magento_pwd" attrs="{'readonly': [('magento_exported', '=', True)]}" password="True"/>
                            <field name="emailid" attrs="{'readonly': [('magento_exported', '=', True)]}"/>
                            <field name="website_id" attrs="{'readonly': [('magento_exported', '=', True)]}" string="Website"/>
                            <field name="group_id" />
                            <field name="mag_vat" />
                            <field name="mag_birthday" />
                            <field name="mag_newsletter"/>
                            <field name="store_id" />
                            <newline/>
                        </group>
                        <group>
                            <separator string="Store views" colspan="4" />
                            <field name="store_ids" colspan="4" nolabel="1" attrs="{'readonly': [('magento_exported', '=', True)]}"/>
                        </group>
                    </page>
                </xpath>
            </field>
        </record>

        <record id="view_partner_category_form_magerp" model="ir.ui.view">
            <field name="name">res.partner.category.form_magerp</field>
            <field name="model">res.partner.category</field>
            <field name="inherit_id" ref="base.view_partner_category_form" />
            <field name="arch" type="xml">
                <field name="parent_id" position="after">
                    <separator string="Magento/Tax Information" colspan="4" />
                    <field name="tax_class_id" select="1" />
                </field>
            </field>
        </record>

    </data>
</openerp>
